#include <stdio.h>
#include <stdlib.h>
#include <math.h>
#include <iostream>
using namespace std;

float calculate_e(){
  float euler = 1, k;
  int input;

  cout<<"Enter value "<<endl;
  scanf("%d", &input);

  for (k = 1; k <= input; k++)
  {
  euler = euler + 1.0/tgamma(k+1);
  }
  printf("euler number is %f\n", euler);
return 0;
}



int main()
{
cout<<calculate_e()<<endl;

return 0;
}
